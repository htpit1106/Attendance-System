<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgaccout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@drawable/admin5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txttenmonitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Lập trình C++"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgxoa"
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/suaicon" />
            <ImageView
                android:id="@+id/imgsua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/deletead" />

            <!--            <ImageView-->
            <!--                android:id="@+id/imgfixaccout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                app:srcCompat="@drawable/fixmodify" />-->

            <!--            <ImageView-->
            <!--                android:id="@+id/imgdeleteaccout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:srcCompat="@drawable/deletead" />-->
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
